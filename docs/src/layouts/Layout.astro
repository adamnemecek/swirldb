---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Modular-first CRDT database for browsers and servers' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | SwirlDB</title>
    <style>
      :root {
        --primary: #667eea;
        --primary-dark: #5568d3;
        --secondary: #764ba2;
        --text: #333;
        --text-light: #666;
        --bg: #ffffff;
        --bg-light: #f9f9f9;
        --border: #e1e1e1;
        --shadow: rgba(0, 0, 0, 0.1);
        --code-bg: #2d2d2d;
        --code-text: #f8f8f2;
        --success: #27ae60;
        --warning: #f39c12;
        --error: #e74c3c;
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        line-height: 1.6;
        color: var(--text);
        background: #000000;
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
      }

      nav {
        background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
        color: white;
        padding: 1rem 0;
        position: sticky;
        top: 0;
        z-index: 100;
        box-shadow: 0 2px 10px var(--shadow);
      }

      nav .container {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      nav h1 {
        font-size: 1.8rem;
        font-weight: 700;
        position: relative;
        top: -7px;
        color: white;
      }

      nav ul {
        list-style: none;
        display: flex;
        gap: 2rem;
      }

      nav a {
        color: white;
        text-decoration: none;
        font-weight: 500;
        transition: opacity 0.2s;
      }

      nav a:hover {
        opacity: 0.8;
      }

      main {
        min-height: calc(100vh - 200px);
      }

      main .container {
        background: var(--bg);
        padding-top: 3rem;
        padding-bottom: 3rem;
      }

      footer {
        background: var(--text);
        color: white;
        text-align: center;
        padding: 2rem 0;
        margin-top: 4rem;
      }

      code {
        background: var(--code-bg);
        color: var(--code-text);
        padding: 0.2rem 0.4rem;
        border-radius: 4px;
        font-family: 'Monaco', 'Courier New', monospace;
        font-size: 0.9em;
      }

      pre {
        background: var(--code-bg);
        color: var(--code-text);
        padding: 1.5rem;
        border-radius: 8px;
        overflow-x: auto;
        margin: 1rem 0;
      }

      pre code {
        background: none;
        padding: 0;
      }

      h1, h2, h3, h4 {
        color: var(--text);
        margin-top: 2rem;
        margin-bottom: 1rem;
        line-height: 1.2;
      }

      h1 { font-size: 2.5rem; }
      h2 { font-size: 2rem; border-bottom: 2px solid var(--primary); padding-bottom: 0.5rem; }
      h3 { font-size: 1.5rem; color: var(--primary); }
      h4 { font-size: 1.2rem; }

      p {
        margin: 1rem 0;
      }

      a {
        color: var(--primary);
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      .btn {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        background: var(--primary);
        color: white;
        border: none;
        border-radius: 6px;
        font-size: 1rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s;
        text-decoration: none;
      }

      .btn:hover {
        background: var(--primary-dark);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
        text-decoration: none;
      }

      .card {
        background: white;
        border: 1px solid var(--border);
        border-radius: 8px;
        padding: 1.5rem;
        margin: 1rem 0;
        box-shadow: 0 2px 8px var(--shadow);
      }

      @media (max-width: 768px) {
        nav ul {
          flex-direction: column;
          gap: 0.5rem;
        }

        h1 { font-size: 2rem; }
        h2 { font-size: 1.5rem; }
      }
    </style>
  </head>
  <body>
    <nav>
      <div class="container">
        <h1>ðŸŒ€ SwirlDB</h1>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/architecture">Architecture</a></li>
          <li><a href="/lifecycle">Lifecycle</a></li>
          <li><a href="/storage">Storage</a></li>
          <li><a href="/encryption">Encryption</a></li>
          <li><a href="/auth">Auth</a></li>
          <li><a href="/sync">Sync</a></li>
          <li><a href="/policy">Policy</a></li>
          <li><a href="/chat">Chat Demo</a></li>
          <li><a href="https://github.com/everyside/swirldb" target="_blank">GitHub</a></li>
        </ul>
      </div>
    </nav>

    <main>
      <div class="container">
        <slot />
      </div>
    </main>

    <footer>
      <div class="container">
        <p>SwirlDB - Modular-first CRDT database</p>
        <p>Apache 2.0 License &copy; 2025 Everyside Innovations, LLC</p>
      </div>
    </footer>
  </body>
</html>
