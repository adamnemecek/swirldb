{
  "name": "swirldb",
  "version": "0.2.0",
  "description": "Modular-first CRDT-based embedded database engine",
  "author": "Everyside Innovations, LLC",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "docs": "cd docs && npm run dev",
    "docs:build": "cd docs && npm run build",
    "docs:preview": "cd docs && npm run preview",
    "start": "npm run docs",
    "build": "npm run build:wasm && npm run build:ts",
    "build:wasm": "cd native/swirldb-browser && npm run build:wasm",
    "build:ts": "cd packages/swirldb-js && npm run build",
    "build:server": "cd native/swirldb-server && cargo build --release",
    "test:core": "cd native/swirldb-core && cargo test",
    "test:browser": "cd native/swirldb-browser && cargo test --target wasm32-unknown-unknown",
    "test:server": "cd native/swirldb-server && cargo test",
    "server": "cd native/swirldb-server && cargo run --release",
    "clean": "cargo clean && rm -rf docs/dist packages/browser-wasm/*",
    "fmt": "cargo fmt --all",
    "clippy": "cargo clippy --all-targets --all-features"
  }
}
